<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/material_deep_teal_200</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/material_deep_teal_500</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent_material_dark</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlHighlight">#009688</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#009688</item>
        <item name="android:textColorPrimary">#212121</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#00796B</item>

        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="colorAccent">#FF5722</item>
        <item name="colorControlActivated">#00796B</item>
        <!--disable title bar from activity-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlHighlight">#009688</item>
        <item name="colorPrimary">#009688</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#FF5722</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name ="stupidtest" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlHighlight">#009688</item>
        <item name="colorPrimary">#009688</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorControlActivated">#00796B</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
